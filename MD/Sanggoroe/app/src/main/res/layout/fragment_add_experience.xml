<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Form Penambahan Pengalaman -->
    <TextView
        android:id="@+id/add_experience_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Pengalaman"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/company_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Perusahaan"/>

    <EditText
        android:id="@+id/experience_description_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Deskripsi Pengalaman"/>

    <EditText
        android:id="@+id/experience_duration_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Durasi Pengalaman"/>

    <Button
        android:id="@+id/add_experience_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>
